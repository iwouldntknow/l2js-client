{
  "declaration": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "es2019", "dom"],
    "declaration": true,
    "outDir": "./dist",

    "strict": true,
    "removeComments": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "src/**/*.json"],
  "exclude": ["**/dist/**/*.d.ts", "./*.js", "_backup", "dist", "node_modules", "examples", "proxy"]
}
